                    <td>A2</td>
                    <td>De2</td>
                    <td>D2</td>
                    <td>Q2</td>
                    <td>HT2</td>
                    <td>TTC2</td>
                    <td>REM2</td>
                </tr>
            </tbody>

        </table>

    </div>
    <div class="bdp">
        <button style="width: 300px; height: 60px">Valider</button>
        <button style="width: 150px; height: 30px">Modifier</button>
    </div>


{% endblock %}

